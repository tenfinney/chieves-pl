{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/lib/*": [
        "lib/*"
      ],
      "@/config": [
        "./config"
      ]
    },
    "outDir": "dist",
    "noEmit": false,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}
